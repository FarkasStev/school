package map.io;

import java.awt.Shape;
import java.awt.geom.Path2D;
import java.io.BufferedReader;
import java.io.IOException;
import java.io.InputStream;
import java.io.InputStreamReader;

import io.ResourceFinder;

public class PolygonReader
{
  private ResourceFinder finder;

  public PolygonReader()
  {
    this(null);
  }

  public PolygonReader(ResourceFinder finder)
  {
    this.finder = finder;
  }

  public Shape read(String name) throws IOException
  {
    if (finder != null)
    {
      InputStream is = finder.findInputStream(name);
      BufferedReader in = new BufferedReader(new InputStreamReader(is));
      String line;

      Path2D bodyShape = new Path2D.Float();

      while ((line = in.readLine()) != null)
      {
        String[] fields = line.split(",");        
        if (Integer.parseInt(fields[0]) == 4)
        {
          bodyShape
        }
        else
        {
          
        }
      }
    }

  }

}
