package gui;

import weather.WeatherDatum;
import weather.WeatherObserver;

public class WeatherBoard extends javax.swing.JTextArea implements WeatherObserver
{

  private static final long serialVersionUID = 1L;

  public WeatherBoard()
  {
    
  }

  @Override
  public void handleWeatherDatum(WeatherDatum datum)
  {
    this.append(datum.toString(true));

  }

  @Override
  public void reset()
  {
    this.removeAll();

  }

}
